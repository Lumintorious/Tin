Person = struct:
	name: String

Contestant = struct:
	num: Number
	introduce: () -> String

Contestant.new = (link name: String) ->
	Person { name } & Contestant { 0, () -> "Hi, I'm {name}!" }

dude = Contestant.new("Dude")
dude2 = dude { name = "Bloke" }

print(dude.introduce())
print(dude2.introduce())